<% for(var i = 0; i < posts.length; i++) { %>
<tr>
   <td><%= i + 1 %></td>
   <td><%= posts[i].name %></td>
   <td><%= posts[i].userid %></td>
   <td><%= posts[i].content %></td>
   <td>
      <a href="/posts/update-post?id=<%= posts[i]._id%>">
         <button type="button" class="btn btn-warning">
            Edit  <i class="fa-solid fa-pen"> </i>
         </button>
      </a>
        
      <a class="btn btn-danger delete" onclick ="deletefunction('<%= posts[i]._id %>')" data-id=<%= posts[i]._id%>>
         Delete
         <span class="text-gradient"><i class="fas fa-times"></i></span>
      </a>
   </td>
</tr>
<% } %>

  

